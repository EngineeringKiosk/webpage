---
export interface Props {
	message: string;
	link: string;
	showStart: Date;
	showEnd: Date;
}

const { message, link, showStart, showEnd } = Astro.props;
---

<section id="announcmentBar" class="py-6 bg-coolGray-900 overflow-hidden bg-opacity-75" style="background-image: url('/images/elements/pattern-dark2.svg'); background-position: center; background-size: cover; display:none;">
	<div class="container px-3 mx-auto text-center">
		<a href={link} class="text-darkCoolGray-50 font-semibold text-xl">
			{message}
		</a>
	</div>
</section>

<script define:vars={{ showStart, showEnd }}>
	const now = new Date();
	if (now < new Date(showEnd) && now > new Date(showStart)) {
		document.getElementById('announcmentBar').style.display = 'block';
	}	
</script>
