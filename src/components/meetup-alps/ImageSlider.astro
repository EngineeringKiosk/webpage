---
import { Image } from "astro:assets";

interface Props {
  images: {
    src: any;
    alt: string;
    title: string;
  }[];
  autoSlideInterval?: number; // in milliseconds, default 5000 (5 seconds)
  className?: string;
}

const { images, autoSlideInterval = 5000, className = "relative rounded-7xl" } = Astro.props;
---

<div class="relative inline-block">
  <div 
    class="image-slider-container relative w-80 h-80 sm:w-96 sm:h-96 md:w-[28rem] md:h-[28rem] lg:w-[32rem] lg:h-[32rem] xl:w-[45rem] xl:h-[45rem]"
    data-auto-slide-interval={autoSlideInterval}
  >
    {images.map((image, index) => (
      <div 
        class={`absolute inset-0 transition-opacity duration-500 ease-in-out overflow-hidden ${
          index === 0 ? 'opacity-100' : 'opacity-0'
        }`}
        data-index={index}
      >
        <Image 
          class="w-80 h-80 sm:w-96 sm:h-96 md:w-[28rem] md:h-[28rem] lg:w-[32rem] lg:h-[32rem] xl:w-[45rem] xl:h-[45rem] rounded-7xl object-cover object-center" 
          src={image.src} 
          alt={image.alt} 
          title={image.title}
        />
      </div>
    ))}
  </div>
  
  {images.length > 1 && (
    <div class="flex justify-center gap-2 mt-4">
      {images.map((_, index) => (
        <button 
          class={`w-3 h-3 rounded-full border-2 transition-all duration-300 hover:border-yellow-500 ${
            index === 0 
              ? 'bg-yellow-500 border-yellow-500' 
              : 'bg-transparent border-gray-300'
          }`}
          data-index={index}
          aria-label={`Go to slide ${index + 1}`}
        ></button>
      ))}
    </div>
  )}
</div>



<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Find ALL slider wrappers to handle multiple sliders
    const sliderWrappers = document.querySelectorAll('.relative.inline-block');
    
    sliderWrappers.forEach((sliderWrapper) => {
      const slider = sliderWrapper.querySelector('.image-slider-container');
      const images = slider?.querySelectorAll('[data-index]') || [];
      const dots = sliderWrapper.querySelectorAll('button[data-index]');
      
      console.log('Found slider:', {
        wrapper: sliderWrapper,
        slider: slider,
        imagesCount: images.length,
        dotsCount: dots.length
      });
      
      if (!images.length || !dots.length || !slider) {
        console.log('Skipping slider - missing elements');
        return;
      }
      
      // Get the interval from the data attribute
      const interval = parseInt((slider as HTMLElement).dataset.autoSlideInterval || '5000');
      
      let currentIndex = 0;
      let autoTimer: NodeJS.Timeout | null = null;
      
      // Show specific slide
      function showSlide(index) {
        console.log('Showing slide:', index, 'Total images:', images.length, 'Total dots:', dots.length);
        
        // Hide all images
        images.forEach((img, i) => {
          img.classList.add('opacity-0');
          img.classList.remove('opacity-100');
        });
        
        // Reset all dots
        dots.forEach((dot, i) => {
          dot.classList.remove('bg-yellow-500', 'border-yellow-500');
          dot.classList.add('bg-transparent', 'border-gray-300');
        });
        
        // Show current image and dot
        if (images[index]) {
          images[index].classList.remove('opacity-0');
          images[index].classList.add('opacity-100');
        }
        
        if (dots[index]) {
          dots[index].classList.remove('bg-transparent', 'border-gray-300');
          dots[index].classList.add('bg-yellow-500', 'border-yellow-500');
        }
        
        currentIndex = index;
      }
      
      // Next slide
      function nextSlide() {
        const next = (currentIndex + 1) % images.length;
        showSlide(next);
      }
      
      // Auto-slide functions
      function startAuto() {
        if (autoTimer) clearInterval(autoTimer);
        if (images.length > 1) {
          autoTimer = setInterval(nextSlide, interval);
        }
      }
      
      function stopAuto() {
        if (autoTimer) {
          clearInterval(autoTimer);
          autoTimer = null;
        }
      }
      
      // Dot clicks
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          console.log('Dot clicked:', index);
          showSlide(index);
          stopAuto();
          startAuto();
        });
      });
      
      // Hover pause
      sliderWrapper.addEventListener('mouseenter', stopAuto);
      sliderWrapper.addEventListener('mouseleave', startAuto);
    
      // Initialize - show first slide
      showSlide(0);
      
      // Start auto-slide
      startAuto();
    }); // End forEach
  });
</script>
