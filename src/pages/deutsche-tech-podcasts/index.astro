---
import Footer from '../../components/Footer.astro';
import MainHead from '../../components/MainHead.astro';
import Nav from '../../components/Nav.astro';
import TechPodcastPreview from '../../components/TechPodcastPreview.astro';

import germanTechPodcasts from "../../data/german-tech-podcasts.json";

let title = 'Die besten Deutschsprachigen Tech Podcasts kuratiert im Engineering Kiosk';
let description = 'Eine handverlesene Liste der besten deutschsprachigen Tech Podcasts zu relevanten Themen fÃ¼r Entwickler:innen, Tech-Leads und Nerds.';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Sort Podcasts by name
function orderByName(a, b) {
  if (a.name.toLowerCase() < b.name.toLowerCase()){
    return -1;
  }
  
  if (a.name.toLowerCase() > b.name.toLowerCase()){
    return 1;
  }

  return 0;
}
germanTechPodcasts.sort(orderByName)


