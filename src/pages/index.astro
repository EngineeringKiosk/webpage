import { cutText } from '../scripts/strings.js';
import { formatDateWithoutWeekday, formatDateWithWeekdayAndOrdinal } from '../scripts/date.js';
import { createMeetupHelpers } from '../scripts/meetups.js';
import AnnouncementBar from '../components/AnnouncementBar.astro';

// Testimonials images
import testimonialLuiseHaack from "../images/testimonials/luise-haack.jpeg";
import testimonialPascalLandau from "../images/testimonials/pascal-landau.jpeg";
import testimonialSaskiaKeil from "../images/testimonials/saskia-keil.png";
import testimonialSebastianHammerl from "../images/testimonials/sebastian-hammerl.jpg";
import testimonialYanivPreiss from "../images/testimonials/yaniv-preiss.jpeg";

// Header image
import headerImageAndyWolfiLounge from "../images/headers/andy-grunwald-wolfgang-gassler-lounge.jpg";

import podcastInfo from '../data/podcast-info.json';
import bestOfEpisodes from '../data/episodes-best-of.json';

let title = 'Engineering Kiosk - Podcast, Meetups + Community';
let description = 'Der deutschsprachige Software-Engineering-Podcast, Tech-Meetups in Innsbruck (AT) und Rhein-Ruhr (DE) sowie eine gro√üe Software-Engineering-Discord-Community rund um die Themen Engineering-Kultur, Open Source und Technologie.';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Data Fetching: List all Markdown posts in the repo.
let allPosts = await getCollection("blog");
allPosts.sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf());

// Determine the latest episode
// We have places where the last episode is linked
let allEpisodes = await getCollection("podcast");
allEpisodes.sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf());
let episodesToShow = allEpisodes.slice(0, 1);
let episode = episodesToShow[0];

let currentEpisodeTags = episode.data.tags.map((element) => URLify(element));
// Cut description text
let currentEpisodeDescription = cutText(episode.data.description, 170);

// get next meetups for both meetup series
const showAnnouncementBarDays = 3;

const { getNextMeetup: getNextMeetupAlps } = await createMeetupHelpers('meetup-alps');
const nextMeetupAlps = getNextMeetupAlps();
let showAnnouncementBarStartAlps = new Date();
let showAnnouncementBarEndAlps = new Date();
let nextMeetupDateAlps = "";

if (nextMeetupAlps && nextMeetupAlps.date) {
	showAnnouncementBarStartAlps = new Date(nextMeetupAlps.date);
	showAnnouncementBarEndAlps = new Date(nextMeetupAlps.date);
	showAnnouncementBarStartAlps.setDate(showAnnouncementBarStartAlps.getDate() - showAnnouncementBarDays);
	showAnnouncementBarEndAlps.setHours(showAnnouncementBarEndAlps.getHours() + 2);
	nextMeetupDateAlps = formatDateWithWeekdayAndOrdinal(nextMeetupAlps.date);
}

const { getNextMeetup: getNextMeetupRhineRuhr } = await createMeetupHelpers('meetup-rhine-ruhr');
const nextMeetupRhineRuhr = getNextMeetupRhineRuhr();
let showAnnouncementBarStartRhineRuhr = new Date();
let showAnnouncementBarEndRhineRuhr = new Date();
let nextMeetupDateRhineRuhr = "";

if (nextMeetupRhineRuhr && nextMeetupRhineRuhr.date) {
	showAnnouncementBarStartRhineRuhr = new Date(nextMeetupRhineRuhr.date);
	showAnnouncementBarEndRhineRuhr = new Date(nextMeetupRhineRuhr.date);
	showAnnouncementBarStartRhineRuhr.setDate(showAnnouncementBarStartRhineRuhr.getDate() - showAnnouncementBarDays);
	showAnnouncementBarEndRhineRuhr.setHours(showAnnouncementBarEndRhineRuhr.getHours() + 2);
	nextMeetupDateRhineRuhr = formatDateWithWeekdayAndOrdinal(nextMeetupRhineRuhr.date);
}

let bestPerformingEpisodes = [
  ...bestOfEpisodes
    .sort((a, b) => a.rank - b.rank) 	// Sort by rank
    .map(item => item.title)         	// Only get the titles
];
// Limit to 6 items
bestPerformingEpisodes = bestPerformingEpisodes.slice(0, 6);
