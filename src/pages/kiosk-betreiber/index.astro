---
import Footer from '../../components/Footer.astro';
import MainHead from '../../components/MainHead.astro';
import Nav from '../../components/Nav.astro';
import TeamMember from '../../components/TeamMember.astro';
import teamMembers from '../../data/team-members.json';

let title = 'Kiosk-Betreiber - Engineering Kiosk';
let description = "Wer sind eigentlich die Gesichter hinter'm Engineering Kiosk? Wer macht's? Wer brabbelt da die ganze Zeit? Wer organisiert die Meetups? Wer hält den Kiosk am Laufen?";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="de">
	<head>
		<MainHead title={title} description={description} image="/images/headers/andy-grunwald-wolfgang-gassler-lounge.jpg" {canonicalURL} />
	</head>

	<body class="antialiased bg-body text-body font-body">
		<div>
			<Nav title={title} />

			<!-- Team -->
			<section class="py-24 bg-coolGray-50" style="background-image: url('/images/elements/pattern-light-big.svg'); background-position: center;">
				<div class="container px-4 mx-auto">
					<div class="mb-16 text-center">
						<span class="inline-block py-px px-2 mb-4 text-xs leading-5 text-yellow-500 bg-yellow-100 font-medium uppercase rounded-9xl">Team</span>
						<h1 class="mb-4 text-3xl md:text-5xl leading-tight text-coolGray-900 font-bold tracking-tight">Die Gesichter hinter'm Engineering Kiosk.</h1>
						<p class="mb-8 text-lg md:text-xl text-coolGray-500 font-medium">Wer macht's? Wer brabbelt da die ganze Zeit? Wer organisiert die Meetups? Wer hält den Kiosk am Laufen?</p>
					</div>

					<div class="flex flex-wrap justify-center -mx-4">
						{Object.keys(teamMembers).map((key) => (
							<TeamMember memberKey={key} />
						))}
					</div>
				</div>
			</section>

			<Footer />
		</div>
	</body>
</html>
