---
import Footer from '../../components/Footer.astro';
import MainHead from '../../components/MainHead.astro';
import Nav from '../../components/Nav.astro';
import SoftwareEngineeringGamePreview from '../../components/SoftwareEngineeringGamePreview.astro';
import { getCollection } from "astro:content";

let title = 'Die besten Spiele für Softwareentwickler:innen kuratiert im Engineering Kiosk';
let description = 'Eine handverlesene Liste der besten Spiele für Softwareentwickler:innen, Tech-Leads und Nerds.';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Build the list of Games
function orderByName(a, b) {
	if (a.data.name.toLowerCase() < b.data.name.toLowerCase()) {
		return -1;
	}

	if (a.data.name.toLowerCase() > b.data.name.toLowerCase()) {
		return 1;
	}

	return 0;
}
let awesomeSoftwareEngineeringGames = await getCollection("awesome-software-engineering-games");
awesomeSoftwareEngineeringGames.sort(orderByName);
---

<html lang="de">
	<head>
		<MainHead title={title} description={description} image="/images/headers/awesome-software-engineering-games-head.png" {canonicalURL} />
	</head>

	<body class="antialiased bg-body text-body font-body">
		<div>
			<Nav title={title} />

			<section class="py-8 md:py-12 lg:pb-12 bg-coolGray-50" style="background-image: url('/images/elements/pattern-light-big.svg'); background-repeat: no-repeat; background-position: center top;">
				<div class="container px-4 mx-auto">
					<div class="flex flex-wrap items-center mb-8">
						<div class="w-full md:w-3/4 mb-8 md:mb-0">
							<span class="inline-block py-px px-2 mb-4 text-xs leading-5 text-yellow-500 bg-yellow-100 font-medium uppercase rounded-full shadow-sm">Kuratierte Spiele für Softwareentwickler:innen</span>
							<h1 class="mb-4 text-4xl md:text-5xl leading-tight text-darkCoolGray-900 font-bold tracking-tighter">Spiele für Softwareentwickler:innen</h1>
							<p class="text-lg md:text-xl text-coolGray-500 font-medium">
								Ein ordentlicher Kiosk verfügt natürlich über ein ausgewogenes Angebot. Ein Zeitschriften-Kiosk bietet eine Auswahl an Zeitschriften, der Engineering Kiosk hingegen ist ein Podcast und <a href="/deutsche-tech-podcasts/" class="text-yellow-500">andere Tech-Podcasts haben wir schon</a>. Daher diversifizieren wir: Wir haben eine <span class="font-bold">kuratierte Liste von
									<span id="number-games">{awesomeSoftwareEngineeringGames.length}</span> Spiele für Softwareentwickler:innen</span> für euch zusammengestellt.
							</p>
						</div>
						<div class="w-full md:w-1/4">
							<div>
								<a class="flex items-center justify-center py-2 px-4 ml-auto text-sm leading-5 text-yellow-50 font-medium bg-yellow-500 hover:bg-yellow-600 focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50 md:max-w-max rounded-md" href="https://github.com/EngineeringKiosk/awesome-software-engineering-games">
									Die Spiele Liste auf GitHub <img class="ml-2 w-8" src="/images/brands/github-black.svg" alt="awesome-software-engineering-games auf GitHub" title="awesome-software-engineering-games auf GitHub" />
								</a>
							</div>
						</div>
					</div>
				</div>
			</section>

			{awesomeSoftwareEngineeringGames.map((game) => <SoftwareEngineeringGamePreview game={game} />)}

			<section id="no-filter-match" class="hidden pt-24 pb-4 bg-coolGray-50" style="background-image: url('/images/elements/pattern-light-big.svg'); background-position: center;">
				<div class="container px-4 mx-auto">
					<div class="mb-8 text-center">
						<h3 class="mb-4 text-xl md:text-3xl leading-tight text-coolGray-900 font-bold tracking-tighter">Leider passt kein Spiel zu deinen Filterkriterien :(</h3>
					</div>
				</div>
			</section>

			<section class="py-24 bg-coolGray-50" style="background-image: url('/images/elements/pattern-light-big.svg'); background-position: center;">
				<div class="container px-4 mx-auto">
					<div class="mb-16 text-center">
						<h3 class="mb-4 text-3xl md:text-5xl leading-tight text-coolGray-900 font-bold tracking-tighter">Dein Lieblingsspiel fehlt?</h3>
						<a
							class="flex items-center justify-center py-2 px-4 m-auto text-sm leading-5 text-yellow-50 font-medium bg-yellow-500 hover:bg-yellow-600 focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50 md:max-w-max rounded-md"
							href="https://github.com/EngineeringKiosk/awesome-software-engineering-games/blob/main/CONTRIBUTING.md"
						>
							Sende uns ein Pull-Request auf GitHub <img class="ml-2 w-8" src="/images/brands/github-black.svg" alt="awesome-software-engineering-games auf GitHub" title="awesome-software-engineering-games auf GitHub" />
						</a>
					</div>
				</div>
			</section>

			<Footer />
		</div>
	</body>
</html>
